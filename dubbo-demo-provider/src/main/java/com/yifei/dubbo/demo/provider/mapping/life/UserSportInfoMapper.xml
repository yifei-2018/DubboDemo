<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yifei.dubbo.demo.provider.dao.life.UserSportInfoDao">
    <resultMap id="BaseResultMap" type="com.yifei.dubbo.demo.provider.model.entity.UserSportInfoEntity">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="user_id" jdbcType="VARCHAR" property="userId"/>
        <result column="ball_type" jdbcType="INTEGER" property="ballType"/>
        <result column="create_time" jdbcType="VARCHAR" property="createTime"/>
    </resultMap>

    <resultMap id="UserResultMap" type="com.yifei.dubbo.demo.provider.model.bo.UserSportInfoBO">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="user_id" jdbcType="VARCHAR" property="userId"/>
        <result column="cn_name" jdbcType="VARCHAR" property="cnName"/>
        <result column="en_name" jdbcType="VARCHAR" property="enName"/>
        <result column="ball_type" jdbcType="INTEGER" property="ballType"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
    </resultMap>

    <sql id="Base_Field">
      id,user_id,ball_type,create_time
    </sql>

    <select id="getUserSportInfoList" resultMap="UserResultMap">
        SELECT
            usi.id,
            usi.user_id,
            ui.cn_name,
            ui.en_name,
            usi.ball_type,
            usi.create_time
        FROM
            user_info ui,user_sport_info usi
        WHERE
            ui.user_id = usi.user_id
            AND usi.user_id = #{userId}

    </select>
</mapper>