<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yifei.dubbo.demo.provider.dao.study.UserReadInfoDao">
    <resultMap id="BaseResultMap" type="com.yifei.dubbo.demo.provider.model.entity.UserReadInfoEntity">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="user_id" jdbcType="VARCHAR" property="userId"/>
        <result column="book_name" jdbcType="VARCHAR" property="bookName"/>
        <result column="create_time" jdbcType="VARCHAR" property="createTime"/>
    </resultMap>

    <resultMap id="UserResultMap" type="com.yifei.dubbo.demo.provider.model.bo.UserReadInfoBO">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="user_id" jdbcType="VARCHAR" property="userId"/>
        <result column="cn_name" jdbcType="VARCHAR" property="cnName"/>
        <result column="en_name" jdbcType="VARCHAR" property="enName"/>
        <result column="book_name" jdbcType="VARCHAR" property="bookName"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
    </resultMap>

    <sql id="Base_Field">
      id,user_id,book_name,create_time
    </sql>

    <select id="getUserReadInfoList" resultMap="UserResultMap">
        SELECT
            uri.id,
            uri.user_id,
            ui.cn_name,
            ui.en_name,
            uri.book_name,
            uri.create_time
        FROM
            user_info ui,user_read_info uri
        WHERE
            ui.user_id = uri.user_id
            AND uri.user_id = #{userId}

    </select>
</mapper>